<ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="601dp" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">


		<TextView android:id="@+id/textDietasDoSite"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
			android:background="#9C9C9C" android:gravity="center_vertical|center_horizontal"
			android:text="Minha Dieta" android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="24dp" android:textStyle="bold" android:typeface="serif" />

		<Button android:id="@+id/buttonMaisDietas"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:layout_marginTop="50dp"
			android:gravity="left|center" android:text="Mais Dietas"
			android:textSize="20dp" android:textStyle="bold" android:typeface="serif" />
		
		<TextView android:id="@+id/textDietaAtual"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true" android:layout_below="@+id/buttonMaisDietas"
			android:layout_marginTop="35dp" android:background="#33CC33" android:text="DIETA ATUAL:" android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#FFFFFF" android:textSize="15dp" android:textStyle="bold" android:typeface="serif"/>
		
		<TextView android:id="@+id/textManha" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true" android:layout_below="@+id/textDietaAtual"
			android:background="#99FF33" android:gravity="center_vertical|center_horizontal"
			android:text="MANHÃƒ" android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#FF9900" android:textSize="15dp"
			android:textStyle="bold" android:typeface="serif" />
		
		<TextView android:id="@+id/textTarde" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true" android:layout_below="@+id/textManha"
			android:layout_marginTop="95dp" android:background="#99FF33"
			android:gravity="center_vertical|center_horizontal" android:text="TARDE"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#FF9900" android:textSize="15dp"
			android:textStyle="bold" android:typeface="serif" />
		
		<TextView android:id="@+id/textNoite" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true" android:layout_below="@+id/textTarde"
			android:layout_marginTop="95dp" android:background="#99FF33"
			android:gravity="center_vertical|center_horizontal" android:text="NOITE"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#FF9900" android:textSize="15dp"
			android:textStyle="bold" android:typeface="serif" />
		<ListView android:id="@+id/listViewRefeicaoTarde" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignBottom="@+id/textNoite" android:layout_alignParentLeft="true" android:layout_below="@+id/textTarde"></ListView>
		<ListView android:id="@+id/listViewRefeicaoManha" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/textNoite" android:layout_alignParentLeft="true" android:layout_below="@+id/textManha"></ListView>
		<TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_below="@+id/textNoite" android:layout_marginTop="95dp" android:background="#99FF33"/>
		<ListView android:id="@+id/listViewRefeicaoNoite" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignBottom="@+id/textView1" android:layout_alignParentLeft="true" android:layout_below="@+id/textNoite"></ListView>

</RelativeLayout>
</ScrollView>
